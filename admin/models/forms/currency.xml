<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_crowdfunding/models/fields">

        <field name="title" type="text"
               size="40"
               label="COM_CROWDFUNDING_TITLE"
               description="COM_CROWDFUNDING_CURRENCY_TITLE_DESC"
               filter="trim"
               required="true"/>

        <field name="code" type="text"
               label="COM_CROWDFUNDING_CURRENCY_CODE"
               description="COM_CROWDFUNDING_CURRENCY_CODE_DESC"
               filter="trim"
               required="true"
                />

        <field name="symbol" type="text"
               label="COM_CROWDFUNDING_SYMBOL"
               description="COM_CROWDFUNDING_SYMBOL_DESC"
                />

        <field name="position" type="list"
               label="COM_CROWDFUNDING_SYMBOL_POSITION"
               description="COM_CROWDFUNDING_SYMBOL_POSITION_DESC"

               filter="intval"
               size="1"
               default="0">
            <option value="0">COM_CROWDFUNDING_BEGINNING</option>
            <option value="1">COM_CROWDFUNDING_END</option>
        </field>

        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
               readonly="true" class="readonly"
               description="JGLOBAL_FIELD_ID_DESC"/>

    </fieldset>
</form>