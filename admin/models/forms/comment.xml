<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="comment">

        <field name="comment" type="textarea" class="span12"
               label="COM_CROWDFUNDING_COMMENT"
               filter="trim"
               rows="5"
               required="true"
                />

        <field name="published" type="radio" class="btn-group"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               filter="intval"
               default="1"
                >
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>

        <field name="id" type="text" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               default="0"
               readonly="true"
                />

        <field name="project_id" type="text" class="readonly"
               label="COM_CROWDFUNDING_PROJECT_ID_LABEL"
               default="0"
               readonly="true"
                />

    </fieldset>
</form>
