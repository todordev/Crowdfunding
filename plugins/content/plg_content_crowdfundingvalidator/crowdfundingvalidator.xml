<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_CROWDFUNDINGVALIDATOR</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2018 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>2.7.2</version>
    <creationDate>08 March, 2018</creationDate>
    <description><![CDATA[
    <p>Crowdfunding - Validator is a plugin that validates project data during the process of creating a campaign.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    ]]></description>
    
    <help url="PLG_CONTENT_CROWDFUNDINGVALIDATOR_HELP_URL"/>
    
    <files>
        <filename plugin="crowdfundingvalidator">crowdfundingvalidator.php</filename>
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="funding" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_STEP_FUNDING">
				<field name="validate_amount" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_AMOUNT" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_AMOUNT_DESC"  class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="validate_funding_duration" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_FUNDING_DURATION" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_FUNDING_DURATION_DESC"  class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="validate_funding_duration_approved" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_FUNDING_DURATION_ACTIVE_PROJECT" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_FUNDING_DURATION_ACTIVE_PROJECT_DESC"  class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="changing_duration" type="list" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_CHANGING_DURATION" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_CHANGING_DURATION_DESC">
                    <option value="0">PLG_CONTENT_CROWDFUNDINGVALIDATOR_NOT_ALLOWED</option>
                    <option value="1">PLG_CONTENT_CROWDFUNDINGVALIDATOR_ALLOWED</option>
                    <option value="2">PLG_CONTENT_CROWDFUNDINGVALIDATOR_AUTHORIZED_BY_ADMINISTRATOR</option>
                </field>
                <field name="changing_amount" type="list" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_CHANGING_AMOUNT" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_CHANGING_AMOUNT_DESC">
                    <option value="0">PLG_CONTENT_CROWDFUNDINGVALIDATOR_NOT_ALLOWED</option>
                    <option value="1">PLG_CONTENT_CROWDFUNDINGVALIDATOR_ALLOWED</option>
                    <option value="2">PLG_CONTENT_CROWDFUNDINGVALIDATOR_AUTHORIZED_BY_ADMINISTRATOR</option>
                </field>
			</fieldset>
            <fieldset name="story" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_STEP_STORY">
                <field name="validate_story_image_video" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_IMAGE_VIDEO" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_IMAGE_VIDEO_DESC"  class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <fieldset name="change_state" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_CHANGE_STATE">
                <field name="validate_state_approved" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_STATE_APPROVED" description="PLG_CONTENT_CROWDFUNDINGVALIDATOR_VALIDATE_STATE_APPROVED_DESC"  class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
	</config>
</extension>
