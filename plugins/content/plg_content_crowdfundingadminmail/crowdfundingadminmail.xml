<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_CROWDFUNDINGADMINMAIL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2018 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>2.7.3</version>
    <creationDate>08 March, 2018</creationDate>
    <description><![CDATA[
    <p>Crowdfunding - Admin Mail is a plugin that sends notification mails to administrator.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    ]]></description>
    
    <help url="PLG_CONTENT_CROWDFUNDINGADMINMAIL_HELP_URL"/>
    
    <files>
        <filename plugin="crowdfundingadminmail">crowdfundingadminmail.php</filename>
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_emailtemplates/models/fields">

                <field name="send_when_published" type="emailtemplate" default="0" label="PLG_CONTENT_CROWDFUNDINGADMINMAIL_SEND_WHEN_PUBLISHED" description="PLG_CONTENT_CROWDFUNDINGADMINMAIL_SEND_WHEN_PUBLISHED_DESC"  />
                <field name="send_when_create" type="emailtemplate" default="0" label="PLG_CONTENT_CROWDFUNDINGADMINMAIL_SEND_WHEN_CREATE" description="PLG_CONTENT_CROWDFUNDINGADMINMAIL_SEND_WHEN_CREATE_DESC" />
                <field name="send_when_report" type="emailtemplate" default="0" label="PLG_CONTENT_CROWDFUNDINGADMINMAIL_SEND_WHEN_REPORT" description="PLG_CONTENT_CROWDFUNDINGADMINMAIL_SEND_WHEN_REPORT_DESC"  />

                <field name="email_mode" type="list" default="html" label="PLG_CONTENT_CROWDFUNDINGADMINMAIL_EMAIL_MODE" description="PLG_CONTENT_CROWDFUNDINGADMINMAIL_EMAIL_MODE_DESC" >
                   <option value="plain">PLG_CONTENT_CROWDFUNDINGADMINMAIL_PLAIN</option>
                   <option value="html">PLG_CONTENT_CROWDFUNDINGADMINMAIL_HTML</option>
                </field>
                
			</fieldset>
	            
        </fields>
	</config>
</extension>
