<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="reporting">

        <field name="subject" type="text" class="form-control"
               label="COM_CROWDFUNDING_SUBJECT"
               description="COM_CROWDFUNDING_FIELD_REPORT_SUBJECT_DESC"
               filter="trim"
               required="true"
               />

        <field name="email" type="email" class="form-control"
               label="COM_CROWDFUNDING_EMAIL_ADDRESS"
               description="COM_CROWDFUNDING_FIELD_REPORT_EMAIL_DESC"
               filter="trim"
               validate="email"
               />

        <field name="description" type="textarea" class="form-control"
               label="COM_CROWDFUNDING_DESCRIPTION"
               description="COM_CROWDFUNDING_FIELD_REPORT_DESCRIPTION_DESC"
               filter="trim"
               rows="5"
               />

        <field name="title" type="text" class="form-control"
               label="COM_CROWDFUNDING_PROJECT"
               disabled="true"
               readonly="true"
               />

        <field name="project" type="text" class="form-control"
               label="COM_CROWDFUNDING_PROJECT"
               description="COM_CROWDFUNDING_FIELD_REPORT_PROJECT_DESC"
               />

        <field name="captcha" type="captcha"
               label="COM_CROWDFUNDING_CAPTCHA_LABEL"
               description="COM_CROWDFUNDING_FRONT_CAPTCHA_DESC"
               validate="captcha"
               />

        <field name="id" type="hidden" filter="int"/>

    </fieldset>
</form>
